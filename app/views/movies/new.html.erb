<h1>New Movie</h1>

<%= form_for @movie do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :genre %>
    <%= f.text_field :genre %>

    <%= f.label :image_url %>
    <%= f.text_field :image_url %>

    <%= f.label :rating%>
    <%= f.number_field :rating %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :channel_id %>
    <%= f.collection_select(:channel_id, Channel.all, :id, :name) %>


    <%= f.submit "Create" %>
<% end %>
